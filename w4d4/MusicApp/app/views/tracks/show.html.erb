<h1><%= @track.name %></h1>
<h2>
  By: <%= link_to "#{@track.band.name}", band_url(@track.band) %>
  On: <%= link_to "#{@track.album.name}", album_url(@track.album) %>
</h2>

<% if @track.checked == "Regular" %>
  <p>This is a Regular track</p>
<% else %>
  <p>This is a Bonus track</p>
<% end %>

<h3>Lyrics:</h3>
<pre><%= ugly_lyrics(@track.lyrics) %></pre>

<hr>

<% @track.notes.each do |note| %>
  <%= render note %>
<% end %>

<p>Add a note:</p>
<%= render "notes/form" %>

<br>
<br>

<%= button_to "Edit this Track", track_url(@track), method: :update %>
<%= button_to "Delete this Track", track_url(@track), method: :delete %>
